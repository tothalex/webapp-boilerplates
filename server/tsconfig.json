{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "~modules/*": ["modules/*"],
      "~utils/*": ["utils/*"], 
      "~types/*": ["types/*"],
      "~pipes/*": ["pipes/*"]
    }
  }
}
